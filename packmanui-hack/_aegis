<!--

 This file introduces package manager interface protection and it's levels.
 Currently interface protection is enabled on build time, but definitions
 does not deny anything and everything is allowed. Only _aegis definition
 file is added to packages.
-->

<aegis>
  <provide> 
  </provide>
  <request>
    <credential name="package-manager::packagemanager_limited"/>
    <credential name="package-manager::packagemanager_private"/>
    <credential name= "CAP::dac_override"/>
    <credential name="mce::DeviceModeControl" />
    <for path="/usr/bin/package-manager-ui" />
    <for path="/usr/bin/installui" />
    <for path="applauncherd-launcher::/usr/bin/applauncherd.bin" id="" />
  </request>
  <request>
    <credential name="UID::user" />
    <credential name="GID::users" />
    <credential name="CAP::dac_override" />
    <for path="/usr/bin/package-manager-notifications" />
  </request>
</aegis>

